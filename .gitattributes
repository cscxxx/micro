# 设置默认行为
* text=auto

# 确保这些文件始终被视为文本文件
*.js text
*.jsx text
*.ts text
*.tsx text
*.json text
*.md text
*.yml text
*.yaml text
*.xml text
*.html text
*.css text
*.scss text
*.less text
*.sql text
*.sh text
*.bat text
*.cmd text

# 确保这些文件始终被视为二进制文件
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.otf binary
*.pdf binary
*.zip binary
*.tar.gz binary
*.rar binary

# 设置行结束符
*.js eol=lf
*.jsx eol=lf
*.ts eol=lf
*.tsx eol=lf
*.json eol=lf
*.md eol=lf
*.yml eol=lf
*.yaml eol=lf
*.xml eol=lf
*.html eol=lf
*.css eol=lf
*.scss eol=lf
*.less eol=lf
*.sql eol=lf
*.sh eol=lf

# 忽略文件权限变化
*.js -diff
*.jsx -diff
*.ts -diff
*.tsx -diff
*.json -diff
*.md -diff
*.yml -diff
*.yaml -diff
*.xml -diff
*.html -diff
*.css -diff
*.scss -diff
*.less -diff
*.sql -diff
*.sh -diff

# 语言统计
*.js linguist-language=JavaScript
*.jsx linguist-language=JavaScript
*.ts linguist-language=TypeScript
*.tsx linguist-language=TypeScript
*.json linguist-language=JSON
*.md linguist-language=Markdown
*.yml linguist-language=YAML
*.yaml linguist-language=YAML
*.xml linguist-language=XML
*.html linguist-language=HTML
*.css linguist-language=CSS
*.scss linguist-language=SCSS
*.less linguist-language=Less
*.sql linguist-language=SQL
*.sh linguist-language=Shell
