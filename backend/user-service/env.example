# 用户服务环境变量配置示例
# 复制此文件为 .env 并修改相应的值

# 服务配置
NODE_ENV=development
PORT=3001
SERVICE_URL=http://localhost:3001

# 数据库配置
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=Chao123456@
DB_NAME=micro_user_service_db

# JWT配置
JWT_SECRET=your-jwt-secret-key-change-in-production
