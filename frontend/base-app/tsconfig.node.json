{
  "compilerOptions": {
    // 项目引用：启用项目引用功能
    "composite": true,

    // 跳过类型检查：跳过对声明文件的类型检查
    "skipLibCheck": true,

    // 模块系统：使用 ESNext 模块系统
    "module": "ESNext",

    // 模块解析策略：使用 bundler 模式
    "moduleResolution": "bundler",

    // 允许合成默认导入：允许从没有默认导出的模块中默认导入
    "allowSyntheticDefaultImports": true
  },
  // 包含的文件：只编译 rspack.config.ts（构建工具配置文件）
  "include": ["rspack.config.ts"]
}
